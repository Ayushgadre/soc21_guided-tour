<?xml version="1.0" encoding="utf-8"?>
<extension type="component" method="upgrade">
	<name>COM_GUIDEDTOURS</name>
	<creationDate>July 2021</creationDate>
	<author>Joomla! Project</author>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<version>4.1.0</version>
	<description>
		COM_GUIDEDTOURS_XML_DESCRIPTION
	</description>
	<namespace path="src">Joomla\Component\Guidedtours</namespace>
	<administration>
		<menu img="class:bookmark">com_guidedtours</menu>
		<submenu>
			<!--
				Note that all & must be escaped to &amp; for the file to be valid
				XML and be parsed by the installer
			-->
			<menu
				link="option=com_tours"
				view="tours"
				img="class:banners"
				alt="Banners/Banners"
				>
				com_banners_banners
			</menu>
			<menu
				link="option=com_categories&amp;extension=com_banners"
				view="categories"
				img="class:banners-cat"
				alt="Banners/Categories"
				>
				com_banners_categories
			</menu>
		</submenu>
		<filename>access.xml</filename>
		<filename>config.xml</filename>
		<filename>guidedtours.xml</filename>
		<folder>forms</folder>
		<folder>services</folder>
		<folder>src</folder>
		<folder>tmpl</folder>
		<languages folder="admin">
			<language tag="en-GB">language/en-GB/com_guidedtours.ini</language>
			<language tag="en-GB">language/en-GB/com_guidedtours.sys.ini</language>
		</languages>
	</administration>
</extension>
